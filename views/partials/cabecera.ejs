  <body class="text-white" id="fondo">
    <script>
      var ruta= window.location.pathname;
      var fondo = document.getElementById('fondo');
      if(ruta =='/'){
        fondo.style.backgroundImage = "url('./fondo/fondo principal.png')";
      }else if (ruta == '/deportes'){
        fondo.style.backgroundImage = "url('./fondo/cuerda.png')";
      }else if (ruta == '/suplementos'){
        fondo.style.backgroundImage = "url('./fondo/suplemento.png')";
      }else if (ruta == '/planes'){
        fondo.style.backgroundImage = "url('https://i.pinimg.com/564x/07/2f/c7/072fc77a0898c6f768e65aba36adb7b1.jpg')";
      }else if (ruta == '/nutricion'){
        fondo.style.backgroundImage = "url('./fondo/nutricion.png')";
      }else if (ruta == '/maquinas'){
        fondo.style.backgroundImage = "url('./fondo/maquinas.png')";
      }else if(ruta =='/ajustes' || ruta=='/perfil' || ruta =='/confirm' || ruta=='/perfil/' || ruta=='/seguridad' || ruta=='/ayuda' || ruta=='/pago' || ruta=='/dev' || ruta=='/direccion' || ruta=='/buy'){
        fondo.style.backgroundColor= '#fff';
      }else if(ruta == '/inicio' || '/login'){
        fondo.style.backgroundColor = "#000"
        setTimeout(() => {
          fondo.style.backgroundColor = ""; // Elimina el color de fondo despu√©s de un segundo
          fondo.style.backgroundImage = "url('./fondo/fondo.png')";
        }, 1000);
      }else{
        fondo.style.backgroundImage = "url('./fondo/fondo.png')";
      }
  </script>
          
